<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:background="@color/almond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/partName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name_detail"
                android:textColor="@color/carob"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/partPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.50 $"
                android:textColor="@color/chai"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/partType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип: Болт"
            android:textColor="@color/carob"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/partCharacteristics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Характеристики: Сталь, оцинкованный"
            android:textColor="@color/carob"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Редактировать"
                android:backgroundTint="@color/matcha"
                android:textColor="@color/almond"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:backgroundTint="@color/chai"
                android:textColor="@color/vanilla"
                android:paddingHorizontal="12dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>