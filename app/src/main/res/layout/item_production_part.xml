<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:background="@color/almond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Первая строка: Чекбокс и название -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/partCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/matcha" />

            <TextView
                android:id="@+id/partName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Болт М8"
                android:textColor="@color/carob"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/partPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.50 $"
                android:textColor="@color/chai"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Вторая строка: Тип и характеристики -->
        <TextView
            android:id="@+id/partType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тип: Крепеж"
            android:textColor="@color/carob"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/partCharacteristics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Характеристики: Сталь, 8мм"
            android:textColor="@color/carob"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/supplierInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Поставщик ID: 3"
                android:textColor="@color/carob"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол-во:"
                android:textColor="@color/carob"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/quantityEdit"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:text="1"
                android:textSize="14sp"
                android:textColor="@color/carob"
                android:background="@drawable/input"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>