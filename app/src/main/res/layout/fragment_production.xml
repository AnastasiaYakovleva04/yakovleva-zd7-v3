<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almond"
    android:padding="16dp"
    tools:context=".ProductionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Карточка с информацией о заказе -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Заголовок -->
                <TextView
                    android:id="@+id/orderNumberText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Заказ #ORD-123456"
                    android:textColor="@color/carob"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Клиент -->
                <TextView
                    android:id="@+id/clientNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Клиент: Иван Иванов"
                    android:textColor="@color/carob"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <!-- Статус -->
                <TextView
                    android:id="@+id/orderStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Статус: В производстве"
                    android:textColor="@color/chai"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Разделитель -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/matcha"
                    android:alpha="0.3"
                    android:layout_marginVertical="8dp" />

                <!-- Товары в заказе -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Товары в заказе:"
                    android:textColor="@color/carob"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/orderItemsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Диван угловой (2 шт) - 1799.98 $"
                    android:textColor="@color/carob"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp" />

                <!-- Общая сумма -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Общая сумма:"
                        android:textColor="@color/carob"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderTotalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1999.99 $"
                        android:textColor="@color/chai"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка с выбором деталей -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выберите детали для производства:"
                    android:textColor="@color/carob"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/partsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/emptyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Детали не найдены"
                    android:textColor="@color/carob"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Кнопка завершения -->
        <Button
            android:id="@+id/completeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Завершить производство"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/vanilla"
            android:background="@drawable/btn_cta"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>