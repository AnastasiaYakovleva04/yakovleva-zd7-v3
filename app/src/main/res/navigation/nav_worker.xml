<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_worker"
    app:startDestination="@id/ordersListFragment">

    <fragment
        android:id="@+id/ordersListFragment"
        android:name="com.example.yakovleva_zd7_v3.OrdersListFragment"
        android:label="Заказы"
        tools:layout="@layout/fragment_order_list">

        <action
            android:id="@+id/action_ordersListFragment_to_productionFragment"
            app:destination="@id/productionFragment" />
    </fragment>

    <fragment
        android:id="@+id/productionFragment"
        android:name="com.example.yakovleva_zd7_v3.ProductionFragment"
        android:label="Производство"
        tools:layout="@layout/fragment_production">

        <argument
            android:name="orderId"
            app:argType="long" />
    </fragment>

</navigation>