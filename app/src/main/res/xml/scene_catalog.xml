<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <!-- Центральная карточка большая -->
        <Constraint android:id="@+id/product_card_1"
            android:layout_width="280dp" android:layout_height="420dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <!-- Левая карточка маленькая -->
        <Constraint android:id="@+id/product_card_2"
            android:layout_width="250dp" android:layout_height="380dp"
            android:scaleX="0.9" android:scaleY="0.9"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/product_card_1"
            motion:layout_constraintTop_toTopOf="parent" />

        <!-- Правая карточка маленькая -->
        <Constraint android:id="@+id/product_card_3"
            android:layout_width="250dp" android:layout_height="380dp"
            android:scaleX="0.9" android:scaleY="0.9"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/product_card_1"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">
        <!-- Левая карточка становится центральной -->
        <Constraint android:id="@+id/product_card_2"
            android:layout_width="280dp" android:layout_height="420dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <!-- Правая карточка -->
        <Constraint android:id="@+id/product_card_3"
            android:layout_width="250dp" android:layout_height="380dp"
            android:scaleX="0.9" android:scaleY="0.9"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/product_card_2"
            motion:layout_constraintTop_toTopOf="parent" />

        <!-- Бывшая центральная становится левой -->
        <Constraint android:id="@+id/product_card_1"
            android:layout_width="250dp" android:layout_height="380dp"
            android:scaleX="0.9" android:scaleY="0.9"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/product_card_2"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/previous">
        <!-- Правая карточка становится центральной -->
        <Constraint android:id="@+id/product_card_3"
            android:layout_width="280dp" android:layout_height="420dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <!-- Левая карточка -->
        <Constraint android:id="@+id/product_card_2"
            android:layout_width="250dp" android:layout_height="380dp"
            android:scaleX="0.9" android:scaleY="0.9"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/product_card_3"
            motion:layout_constraintTop_toTopOf="parent" />

        <!-- Бывшая центральная становится правой -->
        <Constraint android:id="@+id/product_card_1"
            android:layout_width="250dp" android:layout_height="380dp"
            android:scaleX="0.9" android:scaleY="0.9"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/product_card_3"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <!-- Переход вперед -->
    <Transition
        android:id="@+id/forward"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/next"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@+id/carousel"
            motion:touchAnchorSide="right" />
    </Transition>

    <!-- Переход назад -->
    <Transition
        android:id="@+id/backward"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/previous"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@+id/carousel"
            motion:touchAnchorSide="left" />
    </Transition>

</MotionScene>